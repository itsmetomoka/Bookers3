<div class="container">
<%= render 'homes/errors', book: @user %>

<h2>User info</h2>
<%= form_for(@user) do |f| %>
	<div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
  	<%= f.label :profile_image %><br />
	  <%= f.attachment_field :profile_image, autofocus: true, utocomplete: "profile_image" %>
	</div>
	<div class="field">
		<%= f.label :"introduction" %><br />
		<%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
	<%= f.submit 'Update User' %>
<% end %>
</div>