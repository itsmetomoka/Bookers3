<div class="colored">
<table class="table table-hover">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
		<% books.each do |book| %>
			<td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:"50x50" %></td>
				<td><%=link_to book.title,book_path(book.id) %></td>
			<td><%= book.body %></td>
		</tr>
	<% end %>
</table>
</div>


